<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_height="24dp"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text1"
            android:text="100"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/text2"
            android:text="100"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/text3"
            android:text="100"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/text4"
            android:text="100"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text5"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="订阅"
            android:textColor="@color/lightgray"
            android:textSize="14sp">

        </TextView>
        <TextView
            android:id="@+id/text6"
            android:layout_weight="1"
            android:text="朋友"
            android:gravity="center"
            android:textColor="@color/lightgray"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/text7"
            android:layout_weight="1"
            android:text="文章"
            android:gravity="center"
            android:textColor="@color/lightgray"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/text8"
            android:layout_weight="1"
            android:text="关注"
            android:gravity="center"
            android:textColor="@color/lightgray"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

    </LinearLayout>
</merge>